{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "es5",
		"module": "system",
		"moduleResolution": "node",
		"removeComments": true,
		"preserveConstEnums": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noImplicitAny": false,
		"sourceMap": true,
		"outDir": "dist"
	},
	"exclude": [
		"node_modules"
	],
	"files": [
		"main.ts",
		"lib/rts-ws-client.ts",
		"app/view/search.view.ts",
		"app/view/results.view.ts",
		"app/app.config.ts",
		"app/app.routes.ts",
		"app/app.ts",
    "app/srv/dicoogle.srv.ts",
		"app/srv/index.srv.ts",
		"app/srv/notification.srv.ts",
		"typings/index.d.ts"
	]
}
